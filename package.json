{
    "name": "iotc-onvif-camera-gateway",
    "version": "1.0.1",
    "description": "Azure IoT Central Onvif Camera Management Gateway",
    "main": "index.js",
    "scripts": {
        "test": "node ./node_modules/jest/bin/jest.js",
        "tslint": "node ./node_modules/tslint/bin/tslint -p ./tsconfig.json",
        "build": "node ./node_modules/typescript/bin/tsc -p .",
        "dockerbuild": "node ./scripts/dockerBuild.js --docker-build",
        "dockerpush": "node ./scripts/dockerBuild.js --docker-push",
        "preversion": "npm test",
        "version": "node ./scripts/dockerBuild.js --docker-build",
        "postversion": "node ./scripts/dockerBuild.js --docker-push",
        "postinstall": "node ./scripts/setupDevEnvironment.js"
    },
    "author": "sseiber",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git@github.com:sseiber/iotc-onvif-camera-gateway.git"
    },
    "dependencies": {
        "@hapi/boom": "^9.1.0",
        "@hapi/hapi": "^20.0.0",
        "@hapi/wreck": "^17.0.0",
        "azure-iot-device": "1.17.1",
        "azure-iot-device-mqtt": "1.15.1",
        "azure-iot-provisioning-device": "^1.8.5",
        "azure-iot-provisioning-device-mqtt": "^1.7.5",
        "azure-iot-security-symmetric-key": "^1.7.5",
        "fs-extra": "^9.0.1",
        "lodash.get": "^4.4.2",
        "lodash.set": "^4.3.2",
        "moment": "^2.28.0",
        "nconf": "^0.10.0",
        "spryly": "^2.0.8"
    },
    "devDependencies": {
        "@types/hapi__hapi": "^20.0.0",
        "@types/jest": "^26.0.14",
        "@types/nconf": "0.10.0",
        "@types/node": "^14.11.1",
        "jest": "^26.4.2",
        "ts-jest": "^26.4.0",
        "tslint": "^5.20.1",
        "typescript": "^4.0.3"
    },
    "jest": {
        "rootDir": "./src/",
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "json"
        ],
        "transform": {
            ".tsx?": "ts-jest"
        },
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "./__mocks__/fileMock.js"
        }
    }
}
